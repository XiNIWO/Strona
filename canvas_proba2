<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Canvas Example</title>
<style>
    canvas {
        border: 1px solid black;
    }
</style>
</head>
<body>

<canvas id="myCanvas" width="400" height="400"></canvas>

<script>
    // Pobranie elementu canvas
    var canvas = document.getElementById("myCanvas");
    var ctx = canvas.getContext("2d");

    // Rysowanie prostokąta
    ctx.fillStyle = "#FF0000"; // Kolor wypełnienia
    ctx.fillRect(50, 50, 100, 100); // Rysowanie prostokąta

    // Rysowanie koła
    ctx.beginPath();
    ctx.arc(300, 300, 50, 0, 2 * Math.PI); // Rysowanie koła
    ctx.fillStyle = "#0000FF"; // Kolor wypełnienia
    ctx.fill();

    // Reakcja na kliknięcie myszy
    canvas.addEventListener('click', function(event) {
        var mouseX = event.clientX - canvas.offsetLeft;
        var mouseY = event.clientY - canvas.offsetTop;
        
        // Sprawdzenie czy kliknięcie nastąpiło w prostokąt
        if (mouseX >= 50 && mouseX <= 150 && mouseY >= 50 && mouseY <= 150) {
            alert("Kliknięto w prostokąt!");
        }

        // Sprawdzenie czy kliknięcie nastąpiło w koło
        var dx = mouseX - 300;
        var dy = mouseY - 300;
        var distance = Math.sqrt(dx*dx + dy*dy);
        if (distance <= 50) {
            alert("Kliknięto w koło!");
        }
    });
</script>

</body>
</html>
